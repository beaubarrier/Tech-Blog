<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Note:</h3>



    {{#if notes.length}}
    <div class="col-md-6 project-list">
      <h3>Current Notes:</h3>

      {{#each notes as |note|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/project/{{note.id}}">{{note.title}}</a></h4>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{note.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>

  <script src="/js/profile.js"></script>