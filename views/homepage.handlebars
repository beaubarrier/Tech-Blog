<form class="form login-form" id="mainBody">
    <div class="col" type="submit" id="main">

        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Title</label>
            <input type="input" class="form-control" id="exampleFormControlInput1" placeholder="Enter Note Title">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Text Body</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                placeholder="Enter Note Text"></textarea>
        </div>
        <button id="save">Save</button>
    </div>

    <div class="col-md-4">
        <button class="btn btn-sm btn-danger" type="submit" data-id="{{note.id}}">DELETE</button>
    </div>

</form>
<br><br>
{{#if notes.length}}
{{#each notes as |note|}}
{{note.title}}<br>
{{note.text}}

<br><br>
{{/each}}
{{/if}}
